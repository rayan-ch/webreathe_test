{% extends 'base.html.twig' %}

{% block title %}Liste des modules
{% endblock %}

{% block body %}

	<div class="card-body">
		<table class="table table-dark">
			<thead>
				<tr>
					<th scope="col">
						<center>Alerts</center>
					</th>
				</tr>
			</thead>
			<tbody>
				{% for module in modules %}
					{% if module.etat != "fonctionnel" %}
						<tr>
							<td>
								<center>{{module.nom}}</center>
							</td>
						</tr>
					{% endif %}
				{% endfor %}
			</tbody>
		</table>

	</div>

{% endblock %}
