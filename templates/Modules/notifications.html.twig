{% extends 'base.html.twig' %}

{% block title %}Liste des modules
{% endblock %}

{% block body %}

	<div class="card-body">
		<table class="table table-dark">
			<thead>
				<tr>
					<th scope="col">
						<center>Alertes</center>
					</th>
				</tr>
			</thead>
			<tbody>
				{% if nb_alerts > 0 %}
					{% for module in modules %}
						{% if module.etat != "Fonctionnel" %}
							<tr>
								<td>
									{% if module.etat == "En panne" %}
										<center>Le module : <a href="{{path('Detail', {'id':module.id})}}"> {{module.nom}} ({{module.NumeroSerie}})</a>  est en panne <i style="color:red;" class="fas fa-exclamation"></i></center>
									{% elseif module.etat == "En maintenance" %}
										<center>Le module : <a href="{{path('Detail', {'id':module.id})}}"> {{module.nom}} ({{module.NumeroSerie}})</a>  est en maintenance <i style="color:orange;" class="fas fa-hammer"></i></center>
									{% endif %}
								</td>
							</tr>
						{% endif %}
					{% endfor %}
				{% else %}
					<tr>
						<td>
							<center>Pas d'alertes</center>
						</td>
					</tr>
				{% endif %}
			</tbody>
		</table>

	</div>

{% endblock %}
