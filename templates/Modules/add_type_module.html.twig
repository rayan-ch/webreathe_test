{% extends 'base.html.twig' %}

{% block title %}Add new module{% endblock %}

{% block body %}

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header">
                <h3 class="text-center text-black my-2">Ajouter un type de module</h3>
            </div>
            <div class="card-body">
                <form action="" method="POST" class="form">
                    <div class="mt-4 mb-3">
                        <div class="d-grid">
                            <div class="form-floating">
                                <input class="form-control" name="nom" id="inputNom" type="text" placeholder="Nom" required='required' />
                                <label for="inputNom">Type du module (ex: Capteur de température)</label>
                            </div>                        
                        </div>
                    </div>

                   <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input class="form-control" name="GPM" id="inputGPM" type="text" placeholder="Grandeur physique mesurée" required='required' />
                                <label for="inputGPM" style='font-size:13px;'>Grandeur physique mesurée (ex: Température)</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input class="form-control" name="unite" id="inputUnite" type="text" placeholder="Unité de mesure" required='required' />
                                <label for="inputUnite">Unité de mesure (ex: °C)</label>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 mb-0">
                        <div class="d-grid">
                            <th><input class="btn btn-success btn-block" type='submit' value='Ajouter'></th>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}


